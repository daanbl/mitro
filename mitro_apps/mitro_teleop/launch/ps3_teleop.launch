<launch>
    <!-- launch file for PS3 teleoperation of mitro -->
    
    <!-- start PS3 controller -->
    <node pkg="ps3joy" type="ps3_joy_node" name="ps3_joy_node" respawn="true">
        <param name="dev" type="string" value="/dev/input/js0" />
        <param name="deadzone" value="0.12" />
    </node>
    
    <!-- standard PR2 teleop -->
    <node pkg="pr2_teleop" type="teleop_pr2" name="pr2_teleop" output="screen" args="--deadman_no_publish" >
        <rosparam file="$(find mitro_teleop)/config/teleop.yaml" command="load" />
        <remap from="cmd_vel" to="cmd_twist"/>
    </node>
    
</launch>        
