<launch>
    <!-- launch file for SLAM gmapping -->
    
    <!-- start basic nodes -->
    <include file="$(find mitro_bringup)/launch/minimal.launch" />

    <!-- launch base controller -->
    <include file="$(find mitro_base_controller)/launch/mitro_base_controller.launch">
        <arg name="frame_id" value="base_link" />
    </include>

    <!-- start hokuyo -->
    <include file="$(find mitro_bringup)/launch/sensors/hokuyo.launch" />
    
    <!-- start SLAM -->
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping">
        <remap from="scan" to="base_scan"/>
        <param name="xmin" value="-20"/>
        <param name="xmax" value="20"/>
        <param name="ymin" value="-20"/>
        <param name="ymax" value="20"/>
    </node>

</launch>
