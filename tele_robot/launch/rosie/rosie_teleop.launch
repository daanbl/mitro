<launch>
  
  <node pkg="tele_controllers" type="rosie_base_controller.py" name="tele_base_controller" output="screen">
    <param name="wheel_radius" value="0.0762"/>
    <param name="wheel_basis" value="0.39"/>
  </node>

  <node respawn="true" pkg="ps3joy"
        type="ps3_joy_node" name="ps3_joy_node" >
    <param name="dev" type="string" value="/dev/input/js0" />
    <param name="deadzone" value="0.12" />
  </node>
  
  <!-- keyboard teleop
  <node pkg="pr2_teleop" type="teleop_pr2_keyboard" name="teleop_keyboard" output="screen">
    <param name="walk_vel" value="0.05" />
    <param name="run_vel" value="0.10" />
    <param name="yaw_rate" value="1.5" />
    <param name="yaw_run_rate" value="2.5" />
  </node>
  -->
  
  <!-- standard PR2 teleop -->
  <node pkg="pr2_teleop" type="teleop_pr2" name="pr2_teleop" output="screen">
    <rosparam file="$(find tele_robot)/config/rosie/rosie_teleop.yaml" command="load" />
    <remap from="cmd_vel" to="cmd_twist"/>
  </node>
 
</launch>
        
